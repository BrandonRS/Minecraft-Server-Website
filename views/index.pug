doctype html
html(lang="en")
  head
    title MC Server
    link(
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
        crossorigin="anonymous"
    )
    link(href="/noty/lib/noty.css" rel="stylesheet")
    link(href='/noty/lib/themes/mint.css' rel='stylesheet')
    link(href="/style/stylesheet.css" rel="stylesheet")
  body
    .jumbotron
        .container
            .row
                .col-6
                    h1#statusText
                    #serverControl
                        input#stopServer(type="button" value="Stop Server")
                        input#checkStatus(type="button" value="Check Server Status")
                .col-6
                    h2#currentMapName
                    h2#currentVersion

    form#startServerForm.container(action='/upload' method='POST' enctype="multipart/form-data")
        input#inputProp(type='hidden' name='properties')
        .row
            .col-4
                label(for="version") Select Version
                select#version.form-control(name="version")
                        - for (var i = servers.length - 1; i >= 0; i--)
                            option(value=servers[i]) #{servers[i]}
            .col-4
                label(for='mapUpload') Upload Map
                input#mapUpload.form-control-file(required type='file' name='mapUpload' accept='.zip')
                .progress
                    #uploadProgress.progress-bar(role='progressbar')
            .col-4
                h3 Edit Server Properties
                #tableDiv.container-fluid
                    table#tableProp.table.table-sm
                        tbody#tbodyProp
        .row
            .col
                input#submit(type="submit" value='Submit')
            .col
                label(for='command') Send command:
                .input-group.mb-3
                    input#command.form-control(type='text')
                    .input-group-append
                        #sendCommand.btn.btn-outline-secondary(type="button") Send
    .container-fluid
        table.table
            .tbody#log


    // Scripts
    script(
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"
    )
    script(
        src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"
    )
    script(
        src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"
    )
    script(src="/noty/lib/noty.min.js" type="text/javascript")
    script(src="http://malsup.github.com/jquery.form.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js')
    script(src='/socket.io-client/dist/socket.io.slim.js')
    script(src='/js/index.js' type="text/javascript")